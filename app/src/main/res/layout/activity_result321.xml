<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResultActivity321">


    <Button
        android:id="@+id/homeButton123"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:text="Return The Homepage"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tryAgain123"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginTop="477dp"
        android:layout_marginBottom="36dp"
        android:text="Try Again"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/homeButton123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/yourScore123"
        android:layout_width="181dp"
        android:layout_height="56dp"
        android:layout_marginBottom="496dp"
        android:text="Your Score"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/yourScore"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="411dp"
        android:gravity="center"
        android:text="5"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/yourScore123"
        app:layout_constraintTop_toBottomOf="@+id/yourScore123" />
</androidx.constraintlayout.widget.ConstraintLayout>