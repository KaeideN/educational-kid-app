<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResultActivity123">


    <Button
        android:id="@+id/homeButton123"
        android:layout_width="178dp"
        android:layout_height="94dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="47dp"
        android:text="Return The Homepage"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tryAgain123"
        app:layout_constraintTop_toBottomOf="@+id/yourScore" />

    <Button
        android:id="@+id/tryAgain123"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="62dp"
        android:text="Try Again"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/homeButton123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourScore"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/yourScore123"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Your Score"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/yourScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yourScore"
        android:layout_width="44dp"
        android:layout_height="35dp"
        android:layout_marginBottom="134dp"
        android:gravity="center"
        android:text="5"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/homeButton123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourScore123" />
</androidx.constraintlayout.widget.ConstraintLayout>