<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDaysPlay"
    android:background="@drawable/background">

    <!-- Timer TextView -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:textSize="30sp"
        android:textColor="@android:color/black" />

    <!-- ImageViews for the days of the week -->
    <ImageView
        android:id="@+id/sunday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Sunday"
        android:src="@drawable/sunday" />

    <ImageView
        android:id="@+id/monday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/sunday"
        android:contentDescription="Monday"
        android:src="@drawable/monday" />

    <ImageView
        android:id="@+id/tuesday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/monday"
        android:contentDescription="Tuesday"
        android:src="@drawable/tuesday" />

    <ImageView
        android:id="@+id/wednesday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tuesday"
        android:contentDescription="Wednesday"
        android:src="@drawable/wednesday" />

    <ImageView
        android:id="@+id/thursday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/wednesday"
        android:contentDescription="Thursday"
        android:src="@drawable/thursday" />

    <ImageView
        android:id="@+id/friday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/thursday"
        android:contentDescription="Friday"
        android:src="@drawable/friday" />

    <ImageView
        android:id="@+id/saturday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/friday"
        android:contentDescription="Saturday"
        android:src="@drawable/saturday" />

    <!-- Drop targets -->
    <!-- These can be invisible as they are just for reference -->
    <ImageView
        android:id="@+id/drop_target_sunday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_monday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/drop_target_sunday"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_tuesday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/drop_target_monday"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_wednesday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/drop_target_tuesday"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_thursday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/drop_target_wednesday"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_friday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/drop_target_thursday"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/drop_target_saturday"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/drop_target_friday"
        android:visibility="invisible" />

</RelativeLayout>
